{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"jsx": true,
		"useJSXTextNode": true,
		"ecmaVersion": 2018,
		"sourceType": "module",
		"project": ["./tsconfig.json", "./test/tsconfig.json"]
	},
	"ignorePatterns": [
		"/out"
	],
	"plugins": [
		"@typescript-eslint",
		"roblox-ts",
		"prettier"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:roblox-ts/recommended",
		"plugin:prettier/recommended" 
	],
	"rules": {
		"@typescript-eslint/no-explicit-any": "off",
      "@typescript-no-private-identifier": "off",
      "prettier/prettier": [
		   {
		      "endOfLine": "auto"
		   }
	   ]
	}
}